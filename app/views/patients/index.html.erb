<ul>
<% @patients.each do |patient| %>
  <li>Name: <%= patient.name %></li>
  <li>Number of Appointments: <%= patient.appointments.count %></li>
<% end %>
</ul>

<%= link_to @appointment.doctor.name, doctor_path(@appointment.doctor) %><br>

<%= link_to @appointment.patient.name, patient_path(@appointment.patient) %><br>

<%= @appointment.appointment_datetime.strftime('%B %d, %Y at %H:%M') %>
